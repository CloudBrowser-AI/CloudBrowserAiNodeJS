{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": [ "ES2022", "DOM" ],
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": [ "node_modules/*" ]
    }
  },
  "include": [ "**/*.ts" ],
  "exclude": [ "node_modules" ]
}
